<UserControl x:Class="loginPage.CustomControls.BindabelPassowrdBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:loginPage.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPwd"
                 FontSize="13"
           FontWeight="Medium"                             
           FontFamily="Montserrat" 
           Foreground="White"
           CaretBrush="LightGray"
           BorderBrush="DarkGray"
           BorderThickness="0,0,0,1"
           VerticalContentAlignment="Center"
           Padding="28,0,0,0"
           >
        <PasswordBox.Background>
            <ImageBrush ImageSource="/loginPage;component/Images/password.png" Stretch="None"  AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
