<Window x:Class="GenshinImpactHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"

        Title="MainWindow" Height="720" Width="1330">
    <Window.Resources>
        <Style x:Key="menuButton" TargetType="RadioButton">
            <!--Normal button style-->
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="-5,0,0,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="4,0,0,0"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!--Button Style on hover-->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="Background" Value="PaleTurquoise"/>
                    <Setter Property="BorderBrush" Value="{Binding Path=Tag, RelativeSource={RelativeSource Self}}"/>
                </Trigger>

                <!--Activated button style-->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="{Binding Path=Tag, RelativeSource={RelativeSource Self}}"/>
                    <Setter Property="BorderBrush" Value="{Binding Path=Tag, RelativeSource={RelativeSource Self}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="https://uploadstatic.mihoyo.com/contentweb/20200211/2020021114220951905.jpg"
                        Stretch="UniformToFill" />
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="0,0,2 ,0" BorderBrush="LightGray">
                <StackPanel VerticalAlignment="Center" Opacity="0.85">
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="蒙德成"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="璃玥港"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="稻妻城"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="须弥城"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="枫丹延"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="纳塔"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="敬请期待"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" />

        </Grid>
    </Border>

</Window>