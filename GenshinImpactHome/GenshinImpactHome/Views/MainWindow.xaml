<Window x:Class="GenshinImpactHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"

        Title="MainWindow" Height="720" Width="1330">
    <Window.Resources>
       <Style x:Key="menuTitle" TargetType="TextBlock">
           <Style.Setters>
               <Setter Property="Margin" Value="15,0,0,0"></Setter>
               <Setter Property="Foreground" Value="White"></Setter>
               <Setter Property="FontSize" Value="24"></Setter>
           </Style.Setters>
       </Style>
    </Window.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="https://uploadstatic.mihoyo.com/contentweb/20200211/2020021114220951905.jpg"
                        Stretch="UniformToFill" />
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="0,0,2 ,0" BorderBrush="LightGray">
                <StackPanel VerticalAlignment="Center" Opacity="0.85">
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="蒙德成" Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="璃玥港"
                                       Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="稻妻城"
                                       Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="须弥城"
                                       Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="枫丹延"
                                       Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="纳塔"
                                       Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,10,0,10">
                            <TextBlock Text="敬请期待"
                                       Style="{StaticResource menuTitle}"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

          
                <Grid   Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="500"></RowDefinition>
                        <RowDefinition Height="160"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal">
                        <TextBlock Width="980" ></TextBlock>
                        <Button Content="-" Width="40"></Button>
                        <Button Content="X" Width="40" Margin="5,0,0,0"></Button>
                    </StackPanel>

                <Border Grid.Row="2" Margin="0,0,0,30"   >
                       <StackPanel Orientation="Horizontal" Margin="30,0,0,0" >
                           <Button Style="{DynamicResource btnLeft}" Width="100">
                               
                           </Button>
                           <ListBox Width="800" Background="Transparent">
                               <ListBox.ItemsPanel>
                                   <ItemsPanelTemplate>
                                       <StackPanel Orientation="Horizontal" />
                                   </ItemsPanelTemplate>
                               </ListBox.ItemsPanel>
                           </ListBox>

                        <Button Style="{StaticResource btnRight}" Width="100"></Button>
                       </StackPanel>
                    </Border>
                    
                    
                </Grid>
          

        </Grid>
    </Border>

</Window>